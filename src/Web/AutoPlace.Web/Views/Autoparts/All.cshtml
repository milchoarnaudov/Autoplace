@model AutopartsListViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>All Autoparts</h1>

@foreach (var autopart in Model.Autoparts)
{
    <div>
        <img width="100" src="@autopart.ImageUrl" />
        <h2>@autopart.Name</h2>
        <h2>@autopart.Price</h2>
        <h2>@autopart.Description</h2>
        <a class="btn btn-primary" asp-controller="Autoparts" asp-action="Details" asp-route-id="@autopart.Id">View</a>
    </div>
}
