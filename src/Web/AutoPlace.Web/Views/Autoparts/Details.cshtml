@model AutopartDetailsViewModel
@inject IAutopartsService AutopartService

@{
    string userId = null;

    if (this.User.Identity.IsAuthenticated)
    {
        userId = this.User.FindFirst(ClaimTypes.NameIdentifier).Value;
    }
}

<div class="container w-100">
    <div class="d-flex justify-content-between">
        <h1>@Model.Name</h1>
        <a id="addToFavorites"><i class="fa fa-heart fa-2x"></i></a>
    </div>
    <div class="d-flex justify-content-between">
        <span>Added on @Model.CreatedOn.ToString("dd/MM/yyyy")</span>
        <br />
        <span>Views: @Model.CountViews</span>
    </div>
    <hr />
    <div class="d-flex justify-content-between">
        <h2>@Model.ConditionName</h2>
        <h3 class="font-italic align-text-bottom">&euro; @Model.Price</h3>
    </div>
    <br />
    <div class="d-flex justify-content-between">
        <img width="400" height="400" src="@Model.ImageUrl" />
        <div style="width: 400px">
            <h2>@Model.CarManufacturerName - @Model.CarModelName @Model.CarMakeYear</h2>
            <h3 class="font-italic">@Model.CategoryName</h3>
            <hr />
            <div class="card border-light">
                <div class="card-header">
                    <h5 class="card-title">Description:</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">@Model.Description</p>
                </div>
            </div>
            <div class="card border-light">
                <div class="card-header">
                    <h5 class="card-title">Contact the seller:</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">@Model.OwnerEmail</p>
                </div>
                <br />
                <div class="row d-flex justify-content-around">
                    @if (this.User.FindFirstValue(ClaimTypes.Name) != @Model.OwnerUserName)
                    {
                        <a class="btn btn-info col-sm-5 text" asp-controller="Messages" asp-action="Add" asp-route-id="@Model.Id">Send a Message</a>
                        <a class="btn btn-info  col-sm-5" asp-controller="Users" asp-action="Details" asp-route-username="@Model.OwnerUserName">View Profile</a>
                    }
                    @if (this.AutopartService.IsUserAutopartOwner(userId, Model.Id))
                    {
                        <a class="btn btn-info col-sm-5 text" asp-controller="Autoparts" asp-action="Edit" asp-route-id="@Model.Id">Edit <i class="fa fa-edit"></i></a>
                        <a class="btn btn-danger  col-sm-5" asp-controller="Autoparts" asp-action="Delete" asp-route-id="@Model.Id">Delete <i class="fa fa-trash"></i></a>
                    }
                </div>
            </div>
        </div>
    </div>
    <hr />
</div>

@section Scripts{
    <script>
        function gettoken() {
            var token = '@Html.AntiForgeryToken()';
            token = $(token).val();
            return token;
        }

        document.getElementById("addToFavorites").addEventListener('click', function (e) {
            fetch(`/api/Favorites/`,
                {
                    method: "POST",
                    headers: {
                        'Content-Type': 'application/json;charset=UTF-8',
                        'RequestVerificationToken': gettoken()
                    },
                    body: JSON.stringify({ id: @Model.Id })
                })
                .then((response) => {
                    return response.text();
                })
                .then((result) => {
                    console.log(result);
                });
        })
    </script>
}
