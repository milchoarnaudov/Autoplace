@model IEnumerable<MessageListItemViewModel>
@inject ITextService TextService

<h1>All Messages</h1>

<div>
    @if (Model.Count() == 0)
    {
        <div>Empty</div>
    }
    else
    {
        <div class="row">
            @foreach (var message in Model)
            {
                <div class="card w-75">
                    <div class="card-body">
                        <h5 class="card-title">@message.Topic</h5>
                        <p class="card-text">@this.TextService.ShortenText(message.Content)</p>
                        <a asp-controller="Messages" asp-action="Details" asp-route-id="@message.Id" class="btn btn-primary">Read</a>
                    </div>
                </div>
            }
        </div>
    }
</div>

